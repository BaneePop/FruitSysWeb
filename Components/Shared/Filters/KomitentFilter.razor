@using FruitSysWeb.Models
@using FruitSysWeb.Services
@using FruitSysWeb.Services.Implementations
@using FruitSysWeb.Services.Interfaces
@using FruitSysWeb.Components.Shared
@using FruitSysWeb.Components

@inject ArtikalService ArtikalService

@inject IKomitentService KomitentService

<div class="col-md-@Size mb-3">
    <label class="form-label fw-bold">@Label</label>
    <select class="form-select" value="@SelectedValue" @onchange="OnSelectionChanged">
        <option value="">@DefaultText</option>
        @foreach (var komitent in komitenti)
        {
            <option value="@komitent.Id">@komitent.Naziv</option>
        }
    </select>
</div>

@code {
    private List<Komitent> komitenti = new();

    [Parameter] public string Label { get; set; } = "Komitent";
    [Parameter] public string DefaultText { get; set; } = "Svi komitenti";
    [Parameter] public long? SelectedKomitentId { get; set; }
    [Parameter] public EventCallback<long?> SelectedKomitentIdChanged { get; set; }
    [Parameter] public int Size { get; set; } = 2;

    private string SelectedValue => SelectedKomitentId?.ToString() ?? "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            komitenti = await KomitentService.UcitajSveKomitente();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Greška pri učitavanju komitenata: {ex.Message}");
            komitenti = new List<Komitent>();
        }
    }

    private async Task OnSelectionChanged(ChangeEventArgs e)
    {
        if (string.IsNullOrEmpty(e.Value?.ToString()))
        {
            await SelectedKomitentIdChanged.InvokeAsync(null);
        }
        else if (long.TryParse(e.Value.ToString(), out var id))
        {
            await SelectedKomitentIdChanged.InvokeAsync(id);
        }
    }
}